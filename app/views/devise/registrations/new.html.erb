<div class="row justify-content-center">
  <div class="col-lg-5 mt-4 mb-5">
    <h2 class="text-center">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="d-flex">

        <div class="field">
          <%= f.text_field :f_name, placeholder: "Enter First Name", class: " mt-5 form-control rounded-pill mt-3" %>
        </div>

        <div class="field">
          <%= f.text_field :l_name, placeholder: "Enter Last Name", class: "ms-2 mt-5 form-control rounded-pill mt-3" %>
        </div>

      </div>

      <div class="field">
        <%= f.text_field :username, placeholder: "Enter Username", class: " mt-3 form-control rounded-pill mt-3" %>
      </div>

      <div class="field">
        <%= f.email_field :email, placeholder: "Enter Email", class: " mt-3 form-control rounded-pill mt-3", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, placeholder: "Enter Password", class: "form-control rounded-pill mt-3", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, placeholder: "Confrim Password", class: "form-control rounded-pill mt-3", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label "Select Profile Picture:", class: "mt-3"%>
        <%= f.file_field :profile, class: "form-control rounded-pill " %>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: "btn btn-primary rounded-pill mt-4" %>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
