<%if signed_in?%>
<div class="row">
  <div class="col-lg-9">
	  <div class="  p-4">
	    <% @posts.each do |posts|%>
	      <%= render posts %>
	    <% end %>
	  </div>
  </div>
  <div class="col-lg-3 mt-4 border" id="side">
    <div class="list1"><%= image_tag(current_user.profile, :size => "40x40", :crop => :fill, class: "rounded-circle") %> <%=current_user.username%></div>
    <div class="mt-4"><%=link_to "Home", root_path, class: "list"%></div>
    <div class="mt-2"><%=link_to "Profile", root_path, class: "list"%></div>
    <div class="mt-2"><%=link_to "New posts", new_post_path, class: "list"%></div>
    <div class="mt-2"><%=link_to "LogOut", destroy_user_session_path, class: "list", data: {turbo_method: :delete}%></div>  
  </div>
</div>
<%end%>
