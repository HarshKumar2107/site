<%if signed_in?%>
  <div class="card pt-1 pb-2 m-2 bg-dark text-light " style="display:inline-block; height: auto; width: 100%;">
    <% if post.cover.attached? || user.profile.attached?%>

    	<div class="p-2">
    	 <%= link_to image_tag(current_user.profile, :size => "40x40", :crop => :fill, class: "rounded-circle") + current_user.username, posts_path, style: "text-decoration:none; color:white;" %>       

        <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-inline-block downtown">
          <li class="nav-item dropdown ">
            <a class="nav-link dropdown-toggle down" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <span>&#8942;</span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              
              <li><%= link_to "Delete Post", post_path(post),data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: " dropdown-item" %></li>
            </ul>
          </li>
        </ul>
    	</div>
    	<hr>
    	<p class="mt-3 ps-2">
        <%= post.desc %>
      </p>
      <div>
        <%= image_tag(post.cover, style: 'height:auto;width:100%;') %>
      </div>
    <%end%>
  </div>
<%end%>